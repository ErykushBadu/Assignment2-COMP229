    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/">All Products</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">New Product</h2>
            <span class="text-light">Use the below form to add a new product</span>
        </div>
        <!-- Add Product form -->
            <%- include('partials/_form') %>
        <!-- Add Product form -->
    </div>
</main>
<!-- /Main Site -->

