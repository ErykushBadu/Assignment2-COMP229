<!-- Manually imported stylesheet (had no choice, ejs wouldn't load it from the header.ejs file) -->
<style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');

:root {
    --dark: #0b001f;
    --light: #c3adff;
    --border: #b4b4b4;
    --border-btn: #6e6e6e;
}

* {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

a {
    text-decoration: none;
    font-family: 'Roboto', sans-serif;
}

.container {
    max-width: 1024px;
    margin: auto;
}

.nav-brand {
    font-size: 1.5em;
    font-weight: bold;
}

.d-flex {
    display: flex;
    flex-wrap: wrap;
}

.justify-between {
    justify-content: space-between;
}

.text-center {
    text-align: center;
}

.border-shadow {
    border: 1px solid var(--border-btn);
    box-shadow: 1px 3px 10px #e9ecef;
}

.text-dark {
    color: var(--dark);
}

.text-light {
    color: var(--light);   
}

.inline {
    display: inline-block;
}

#header nav {
    background-color: #a133cc;
    padding: 2em 0;
    width: 100%;
}

#site-main {
    margin-top: 4em;
    font-family: 'Roboto', sans-serif;
}

#site-main .container .box-nav > a{
    font-size: 1em;
    padding: 1em 1em;
}

#site-main .container form{
    margin: 2em 0;
}

table {
    border-spacing: 0px;
    width: 100%;
}

.table td, .table th {
    padding: .75em;
    vertical-align: top;
    text-align: center;
    border-top: 1px solid var(--border);
}

.table td > a.btn {
    padding: 0.5em 0.5em;
    font-size: 1.1em;
    margin: 0 0.2em;
}

.table tr:hover td > a{
    box-shadow: none;
}

.table tr:hover {
    background-color: #a133cc;
}

.table .thead-dark th {
    color: #fff;
    background-color: var(--dark);
    border-color: #252029;
}

/* add product & update product template */

.form-title {
    margin-top: 2em;
}

.form-title {
    padding: 1em 0;
}

.new_product {
    max-width: 786px;
    margin: auto;
}

#add_product .form-group,
#update_product .form-group {
    margin: 2em 0;
}

#add_product .form-group input[type="text"],
#update_product .form-group input[type="text"]  {
    width: 100%;
    padding: 0.5em 0.5em;
    margin: 0.5em 0;
    border: 1px solid var(--border);
    font-family: 'Roboto', sans-serif;
}

#add_product .form-group .radio,
#update_product .form-group .radio {
    margin: 0.5em 1em;
}

#add_product .form-group .btn,
#update_product .form-group .btn {
    width: 25%;
    padding: 0.5em 0.25em;
    background-color: #a133cc;
    font-family: 'Roboto', sans-serif;
}
</style>
<!-- Manually imported stylesheet (had no choice, ejs wouldn't load it from the header.ejs file) -->

